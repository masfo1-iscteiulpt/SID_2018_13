<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox style="-fx-background-color: ffffff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #05BC78;">
         <children>
            <Button fx:id="showVariables" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showVariables" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: ffffff;" text="Variáveis">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="showUsers" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#showUsers" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #05BC78;" text="Utilizadores" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <StackPane>
         <children>
            <VBox fx:id="usersPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #ffffff;">
               <children>
                  <Label text="Gestão de utilizadores">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TableView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Email" />
                      <TableColumn prefWidth="90.0" text="Nome" />
                        <TableColumn prefWidth="175.0" text="Categoria Profissional" />
                        <TableColumn minWidth="0.0" prefWidth="119.0" text="Username" />
                    </columns>
                  </TableView>
                  <HBox alignment="TOP_CENTER" spacing="30.0">
                     <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: #05BC78;" text="Criar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: #05BC78;" text="Alterar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: #ff0505;" text="Apagar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="variablesPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #ffffff;">
               <children>
                  <Label text="Gestão de variáveis">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TableView editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="94.0" text="ID" />
                      <TableColumn prefWidth="365.0" text="Nome" />
                    </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="30.0">
                     <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: #05BC78;" text="Criar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: #05BC78;" text="Alterar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" style="-fx-background-color: #ff0505;" text="Apagar" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </children>
</HBox>
